#include <bits/stdc++.h>
using namespace std;

/****************************************************************
    Following is the class structure of the Node class:
    class Node {
    public:
        int data;
        Node *next;
        Node(int data) {
            this->data = data;
            this->next = NULL;
        }
    };
*****************************************************************/

Node *removeDuplicates(Node *head) {
    if (head == NULL) return NULL;

    unordered_map<int,bool> visited;

    Node *curr = head;
    Node *prev = NULL;

    while (curr != NULL) {
        if (visited[curr->data]) {
            // Already seen ? delete this node
            prev->next = curr->next;
            delete curr;
            curr = prev->next;
        } else {
            // First time ? keep it
            visited[curr->data] = true;
            prev = curr;
            curr = curr->next;
        }
    }
    return head;
}
