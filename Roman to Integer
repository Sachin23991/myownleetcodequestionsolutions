#include<algorithm>
class Solution {
public:
    int romanToInt(string s) {
    
     // first we set the integer to roman 
       unordered_map<char, int> values = {
        {'I', 1}, {'V', 5}, {'X', 10}, {'L', 50},
        {'C', 100}, {'D', 500}, {'M', 1000}
    };
        
        int total = 0;
        int n = s.size();

        for(int i = 0;i < n ; i++){
            int curr = values[s[i]];// means we store the value corresponding to the character of the string if avilable
            int next = ((i+1) < n)?values[s[i+1]]:0;

            if(curr < next){
                total -= curr;
            }else{
                total += curr;
            }

        }
        return total;
        }
    
};
