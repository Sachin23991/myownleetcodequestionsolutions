class Solution {
public:
    bool canJump(vector<int>& nums) {
        int n = nums.size();
        int farthest = 0;  // farthest index we can reach so far

        for (int i = 0; i < n; i++) {
            if (i > farthest) {
                // we reached a point that is not reachable
                return false;
            }
            farthest = max(farthest, i + nums[i]); 
            if (farthest >= n - 1) {
                return true; // we can reach the last index
            }
        }
        return false;
    }
};
